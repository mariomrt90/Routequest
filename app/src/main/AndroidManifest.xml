<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_routequest_launcher_logo_f"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_routequest_launcher_logo_f_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Routequest"
        tools:targetApi="31">
        <activity
            android:name=".ConsultRecordsActivity"
            android:exported="false"
            android:label="@string/title_activity_consult_records"
            android:theme="@style/Theme.Routequest" />
        <activity
            android:name=".PauseDialogActivity"
            android:exported="false"
            android:label="@string/title_activity_pause_dialog"
            android:theme="@style/Theme.Routequest" />
        <activity
            android:name=".MapActivity"
            android:exported="false"
            android:label="@string/title_activity_map"
            android:theme="@style/Theme.Routequest" />
        <activity
            android:name=".ClimatePreviewActivity"
            android:exported="false"
            android:label="@string/title_activity_route_preview"
            android:theme="@style/Theme.Routequest" />
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.Routequest" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Routequest">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Routequest" />
    </application>

</manifest>